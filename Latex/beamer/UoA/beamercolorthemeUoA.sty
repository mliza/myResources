%----------------%
%---Set Colors---%
%----------------%

%Title Page
\setbeamercolor{title}{fg=blueUA} 
\setbeamercolor{author}{fg=blueUA}
\setbeamercolor{date}{fg=blueUA}
\setbeamercolor{dashedLine}{fg=redUA} 

%Structures
\setbeamercolor*{frametitle}{fg=blueUA}
\setbeamercolor*{framesubtitle}{fg=white}

%Text
\setbeamercolor*{normal text}{fg=black, bg=white}
\setbeamercolor*{structure}{fg=black, bg=white}
\setbeamercolor*{alerted text}{fg=redUA}

%Items, footnotes and links
\setbeamercolor*{item}{fg=purple}
\setbeamercolor*{footnote mark}{fg=purple}
\setbeamercolor*{footline}{fg=redUA} 
\hypersetup{urlcolor=blue}

%Blocks
%Standard block 
\setbeamercolor*{block title}{fg=white, bg=blueUA}
\setbeamercolor*{block body}{fg=blueUA, bg=gray!15!white}
%Example block 
\setbeamercolor*{block title example}{fg=white, bg=seagreen}
\setbeamercolor*{block body example}{fg=black, bg=gray!15!white}
\setbeamercolor*{block title alerted}{fg=white, bg=redUA}
\usebeamercolor*{normal text}

